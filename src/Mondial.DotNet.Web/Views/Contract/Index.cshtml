@{
    ViewData["Title"] = "Liste des contrats";
}
@using Mondial.DotNet.Library.Models
@model IEnumerable<Contract>


<h1 class="display-4">Contrats des joueuses de l'Équipe de France de la Coupe du Monde 2019</h1>
<p>Liste des contrats liant les <a href="/Player">joueuses</a> de l'Équipe de France de la Coupe du Monde 2019 avec les <a href="/Team">clubs</a> (historique). (Ordre : par ancienneté du début de contrat)</p>
<div class="text-center">
    <table class="table table-striped">
        <thead>
            <tr>
            <th scope="col">Joueuse</th>
            <th scope="col">Club</th>
            <th scope="col">Période</th>
            <th scope="col">Action...</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contract in Model)
            {
                var period = @contract.YearFrom + " - " + @contract.YearTo;
            <tr>
                <td>@contract.Signatory?.Name</td>
                <td>@contract.Employer?.Name</td>
                <td>@period</td>
                <td>
                    <a class="btn btn-outline-primary" asp-controller="Contract" asp-action="Edit" asp-route-id="@contract.Id">Modifier</a>
                    <a class="btn btn-outline-danger" asp-controller="Contract" asp-action="Delete" asp-route-id="@contract.Id">Supprimer</a>
                </td>
            </tr> 
            }
        </tbody>
    </table>
</div>