@{
    ViewData["Title"] = "Edition d'un club";
}
@using Mondial.DotNet.Library.Models
@model Team

<h1 class="display-4">Edition d'un club (formulaire)</h1>

<div class="row">
    <div class="col-12">
        <form class="form-group" asp-action="Edit">

            <input asp-for="Id" type="hidden" value="@Model?.Id"/>

            <div class="form-group">
                <label for="teamName">Nom</label>
                <input id="teamName" type="text" class="form-control" placeholder="Nom du club" value="@Model?.Name" asp-for="Name"/>
            </div>

            <div class="form-group">
                <label for="teamFlag">Logo</label>
                <input id="teamFlag" type="text" class="form-control" placeholder="Lien vers l'écusson du club" value="@Model?.Flag" asp-for="Flag"/>
            </div>

            <div class="form-group">
                <label for="teamAddress">Adresse</label>
                <input id="teamAddress" type="text" class="form-control" placeholder="Adresse du club" value="@Model?.Address" asp-for="Address"/>
            </div>

            <div class="form-group">
                <label for="teamLatitude">Latitude</label>
                <input id="teamLatitude" type="text" class="form-control" placeholder="Latitude" value="@Model?.Latitude" asp-for="Latitude"/>
            </div>

            <div class="form-group">
                <label for="teamLongitude">Longitude</label>
                <input id="teamLongitude" type="text" class="form-control" placeholder="Longitude" value="@Model?.Longitude" asp-for="Longitude"/>
            </div>

            <button type="submit" class="btn btn-primary">Valider</button>
            <a class="btn btn-danger" asp-controller="Team" asp-action="Index">Annuler</a>
        </form>
    </div>
</div>