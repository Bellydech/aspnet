@{
    ViewData["Title"] = "Edition d'une joueuse";
}
@using Mondial.DotNet.Library.Models
@model Player

<h1 class="display-4">Edition d'une joueuse (formulaire)</h1>

<div class="row">
    <div class="col-12">
        <form class="form-group" asp-action="Edit">

            <input asp-for="Id" type="hidden" value="@Model?.Id"/>

            <div class="form-group">
                <label for="playerFirstName">Prénom</label>
                <input id="playerFirstName" type="text" class="form-control" placeholder="Prénom" value="@Model?.FirstName" asp-for="FirstName"/>
            </div>

            <div class="form-group">
                <label for="playerLastName">Nom</label>
                <input id="playerLastName" type="text" class="form-control" placeholder="Nom" value="@Model?.LastName" asp-for="LastName"/>
            </div>

            @{
                var dateString = Model?.DateOfBirth.GetValueOrDefault(DateTime.MinValue).ToString("dd/MM/yyyy");
            }

            <div class="form-group">
                <label for="playerDateOfBirth">Naissance</label>
                <input id="playerDateOfBirth" type="text" class="form-control" placeholder="Date de naissance" value="@dateString" asp-for="DateOfBirth"/>
            </div>

            <div class="form-group">
                <label for="playerImage">Image</label>
                <input id="playerImage" type="text" class="form-control" placeholder="Image" value="@Model?.Image" asp-for="Image"/>
            </div>
            <button type="submit" class="btn btn-primary">Valider</button>
            <a class="btn btn-danger" asp-controller="Player" asp-action="Index">Annuler</a>
        </form>
    </div>
</div>